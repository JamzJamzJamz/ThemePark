
@{
    ViewBag.Title = "MaintenanceGraphic2";
}

@{
    var myChart2 = new Chart(width: 1000, height: 400)
        .AddTitle("Maintenance Report")
        //.SetXAxis(max: 5)

        .AddSeries(

            name: "Periodic",
            chartType: "Column",
            xValue: new[] { "Teacups", "Texas Twister", "Unsecure Database", "UHCS", "Unplugged Toaster" },
            yValues: new[] { ViewBag.Teacups_Periodic.ToString(), ViewBag.TT_Periodic.ToString(), ViewBag.UD_Periodic.ToString(), ViewBag.UHCS_Periodic.ToString(), ViewBag.UT_Periodic.ToString() })
        .AddSeries(
            name: "Scheduled",
